{
  "preset": "jest-preset-angular",
  "setupTestFrameworkScriptFile": "<rootDir>/jest-setup.ts",
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/src/app/$1"
  },
  "collectCoverageFrom": [
    "src/app/**/*.ts"
  ],
  "coverageReporters": [
    "text-summary"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "index.ts"
  ],
  "testRegex": "\\.spec\\.ts$"
}
